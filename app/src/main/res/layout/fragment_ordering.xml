<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ordering.OrderingFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ordering_step_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                style="@style/OrderingText"
                android:gravity="center"
                android:text="Получение"
                android:textColor="@color/main_text" />

            <TextView
                android:id="@+id/textView14"
                style="@style/OrderingText"
                android:gravity="center"
                android:text="Оплата" />

            <TextView
                android:id="@+id/textView15"
                style="@style/OrderingText"
                android:gravity="center"
                android:text="Просмотр" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                style="@style/OrderingText"
                android:text="Адрес\nполучения"
                android:textColor="@color/lightGray" />

            <TextView
                android:id="@+id/textView17"
                style="@style/OrderingText"
                android:text="Способ\nоплаты"
                android:textColor="@color/lightGray" />

            <TextView
                android:id="@+id/textView18"
                style="@style/OrderingText"
                android:text="Проверьте\nданные"
                android:textColor="@color/lightGray" />
        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView2"
            android:name="com.example.apprent.ui.ordering.ShippingFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Продолжить"
            android:textColor="@color/white"/>
    </LinearLayout>

</FrameLayout>