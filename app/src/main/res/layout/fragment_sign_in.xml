<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.authenticationpage.SignInFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fake_button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/alpha_null"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/login_email"
                android:textColor="@color/main_text"
                android:textSize="14sp"
                android:textStyle="bold"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/go_to_sign_up"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/alpha_null"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/login_number"
                android:textColor="@color/main_text"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/bottom_frame_left" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/email_for_sign_in"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="@string/enter_email"
            android:inputType="textEmailAddress"
            android:textColor="@color/main_text" />

        <EditText
            android:id="@+id/password_for_sign_in"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="@string/enter_password"
            android:inputType="textPassword"
            android:textColor="@color/main_text" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/signIn"
                style="@style/AuraButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:text="@string/sign_in"
                android:textColor="@color/button_aura_text"
                tools:ignore="InvalidId" />
            <Space
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />
            <CheckBox
                android:id="@+id/remember_me_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remember_me_checkbox" />
        </LinearLayout>

        <Button
            android:id="@+id/forgot_password_for_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/alpha_null"
            android:paddingLeft="2dp"
            android:text="@string/forgot_password"
            android:textColor="@color/for_hyperlink">

        </Button>
    </LinearLayout>

</FrameLayout>