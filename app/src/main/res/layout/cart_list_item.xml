<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/image_cart_item"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:background="@color/black"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_cart_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/name_cart_item"
            android:textColor="@color/main_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_cart_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/date_cart_item"
            android:textColor="@color/main_text" />

        <TextView
            android:id="@+id/count_cart_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/count_cart_item"
            android:textColor="@color/main_text" />

        <TextView
            android:id="@+id/period_cart_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/period_cart_item"
            android:textColor="@color/main_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/price_cart_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:textColor="@color/main_text" />

</LinearLayout>
